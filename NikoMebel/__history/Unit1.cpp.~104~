class User{
	public:
		AnsiString login,pass;

		User(AnsiString l, AnsiString p){
			login = l;
			pass=p;
		}

		User(){
			login="name";
			pass="pass";
		}

		int ToCheckUser(AnsiString log, AnsiString pas){
			if(login==log && pass== pas){
				ShowMessage("Вітаємо, ви увійшли в свій профіль!");
				return 1;
			}else{
                return 0;
            }
		}


};

