//			l =  ADOQuery1->FieldValues["login"];
//			p =  ADOQuery1->FieldValues["pass"];
//
//			if(l==Edit1->Text && p== Edit2->Text){
//				ShowMessage("Вітаємо, ви увійшли на свій акаунт!");
//				k=1;
//			}
//
