//	}
//
//	ADOQuery1->Active=false;
	User U1,U2(Edit1->Text,Edit2->Text);

	ADOQuery1->Active=true;
	int k=0;
	if(!ADOQuery1->Eof){
		ADOQuery1->First();

		do{

			U1.login =  ADOQuery1->FieldValues["login"];
			U1.pass =  ADOQuery1->FieldValues["pass"];

			k =  U2.ToCheckUser(U1.login, U1.pass);
			if(k==1){
                break;
			}

			ADOQuery1->Next();
		}while(!ADOQuery1->Eof);
	}

	if(k == 0){
		ShowMessage("Користувачів із таким логіном та паролем не існує. Спробуйте ще раз!");
	}


	ADOQuery1->Active=false;
	if(k==1){
		Form3 = new TForm3(this, U1.login);
		Form3->Show();
		Form1->Hide();
	}
}
